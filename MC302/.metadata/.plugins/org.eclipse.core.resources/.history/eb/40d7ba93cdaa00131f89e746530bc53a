package prodPlan;

public class Item {
	
	protected Parte parte;
	protected int quantidade;
	
	public Item(Parte parte, int quantidade) {
		
		this.parte = parte;
		this.quantidade = quantidade;
	}
	
	public float calculaValor(){
		
		return this.parte.calculaValor() * this.quantidade;
	}
	
	public String toString(){
		
		String formato = "cod:%d nome:%s quantidade:%d valor unit√°rio:%f valor:%f";
		return String.format(formato, this.parte.cod, this.parte.nome, this.quantidade, this.parte.valor, this.calculaValor());
	}

}
